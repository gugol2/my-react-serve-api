{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // Keep npm run debug running in your terminal and use this attach configuration to debug:
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to API server",
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}"
        },
        // Stop your terminal's npm run debug and use this launch configuration to debug:
        {
            "type": "node",
            "request": "launch",
            "name": "Debug API server",
            "runtimeExecutable": "tsx",
            "program": "${workspaceFolder}/src/index.tsx",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}",
            "restart": true,
            "console": "integratedTerminal"
        },
    ]
}